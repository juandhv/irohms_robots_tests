<?xml version="1.0"?>
<launch>

    <arg name="bringup_package_path" value="$(find test_rbvogui_common_bringup)" />
    <arg name="rviz_package" default="$(optenv RVIZ_PACKAGE rbvogui_gazebo)"/>
    <arg name="config" default="default" />
    <arg name="output" default="screen" />
    <arg name="respawn" default="false" />
    <!-- The is gonna have its nodes/topics under a namespace with the same name. -->
    <arg name="robot_name" default="$(optenv ROBOT_ID robot)"/>
    
    <!-- Specify rviz config file, alternative is "map" for localization and navigation-->
    <arg name="config_file" default="odom"/>
    
    <arg name="rviz_config_file" default="rviz/rbvogui_$(arg config_file).rviz"/>
    <arg name="rviz_config_path" default="$(eval find(rviz_package) + '/' + rviz_config_file)"/>
    
    <!-- RVIZ GUI -->
    <group ns="$(arg robot_name)">
    	<node respawn="$(arg respawn)" name="$(anon rviz)" pkg="rviz" type="rviz" args="-d $(arg rviz_config_path)" output="$(arg output)" />
    </group>

</launch>
